<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="AgricultureApp.MauiClient.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:sf="clr-namespace:Syncfusion.Maui.Toolkit.SegmentedControl;assembly=Syncfusion.Maui.Toolkit"
    xmlns:resources="clr-namespace:AgricultureApp.MauiClient.Resources.Strings"
    xmlns:pages="clr-namespace:AgricultureApp.MauiClient.Pages"
    Shell.FlyoutBehavior="Flyout"
    Title="AgricultureApp">

    <ShellContent
        x:Name="HomeShellContent"
        Title="{x:Static resources:AppResources.Home}"
        ContentTemplate="{DataTemplate pages:MainPage}"
        Route="MainPage" />

    <ShellContent
        x:Name="ProfileShellContent"
        Title="{x:Static resources:AppResources.ProfilePage}"
        ContentTemplate="{DataTemplate pages:ProfilePage}"
        Route="ProfilePage" />

    <Shell.FlyoutFooter>
        <Grid Padding="15" ColumnDefinitions="*, Auto">
            <sf:SfSegmentedControl x:Name="ThemeSegmentedControl"
                                   VerticalOptions="Center"
                                   HorizontalOptions="Center"
                                   SelectionChanged="SfSegmentedControl_SelectionChanged"
                                   SegmentWidth="40" SegmentHeight="40">
                <sf:SfSegmentedControl.ItemsSource>
                    <x:Array Type="{x:Type sf:SfSegmentItem}">
                        <sf:SfSegmentItem ImageSource="{StaticResource IconLight}" SemanticProperties.Description="Light mode"/>
                        <sf:SfSegmentItem ImageSource="{StaticResource IconDark}" SemanticProperties.Description="Dark mode"/>
                    </x:Array>
                </sf:SfSegmentedControl.ItemsSource>
            </sf:SfSegmentedControl>

            <Button Grid.Column="1"
                    FontSize="14"
                    Text="{x:Static resources:AppResources.LogOut}"
                    ImageSource="{StaticResource IconSignOut}"
                    ContentLayout="Left, 10"
                    SemanticProperties.Description="Sign out"
                    VerticalOptions="Center"
                    Clicked="LogoutButton_Clicked"/>
        </Grid>
    </Shell.FlyoutFooter>

</Shell>
